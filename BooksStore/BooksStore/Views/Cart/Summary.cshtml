@model BooksStore.Models.Cart
<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalPrice().ToString("c")
    </span>
    @Html.ActionLink("Checkout", "CartIndex", "Cart",new { returnUrl = Request.Url.PathAndQuery }, null)
</div>
