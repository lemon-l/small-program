<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="客户端" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Name="btn1" Content="同时启动2个客户端（测试用）" Padding="10 0 10 0" Click="btn1_Click"/>
        <Button Name="btn2" Content="只启动一个客户端（实际情况）" Padding="10 0 10 0" Margin="0 20 0 0" Click="Btn2_Click"/>
    </StackPanel>
</Window>
